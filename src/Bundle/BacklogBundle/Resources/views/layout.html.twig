<!DOCTYPE html>
<!-- todo inject lang of user -->
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ 'title.app_name'|trans }} - {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/backlog/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/backlog/css/layout.css') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('dashboard') }}">{{ 'nav.home.text'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('project_create') }}">{{ 'link.project.create'|trans }}</a>
                </li>
                <li class="nav-item">
                   <div class="dropdown">
                       <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           {{ 'nav.teams.dropdown'|trans }}
                       </button>
                       <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                           <h4 class="dropdown-header">{{ 'nav.teams.most_recent'|trans }}</h4>
                           {# todo add recent teams #}
                           <div class="dropdown-divider"></div>
                           <a class="dropdown-item" href="{{ url('team_create') }}">{{ 'link.team.create'|trans }}</a>
                           <div class="dropdown-divider"></div>
                           <a class="dropdown-item" href="{{ url('my_teams') }}">{{ 'nav.teams.my_teams'|trans }}</a>
                       </div>
                   </div>
                </li>
            </ul>

            <ul class="navbar-nav pull-right">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Username</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" href="#TODO">My profile</a>
                        <a class="dropdown-item" href="#TODO">Change password</a>
                        <a class="dropdown-item" href="#TODO">Settings</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#TODO">{{ 'nav.logout.text'|trans }}</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <div class="container-fluid">
            <div id="flash-message" class="row">
                {% for message_type, flash_messages in app.session.flashBag.all %}
                    {% for flash_message in flash_messages %}
                        <div class="alert alert-{{ message_type }}">{{ flash_message|trans() }}</div>
                    {% endfor %}
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-sm-12 col-md-12 main" >
                    {% block content %}CONTENT{% endblock %}
                </div>
            </div>
        </div>
    </main>

    <footer class="bottom text-muted mr-auto">
        <p class="text-center">
            &copy;{{ 'now'|date('Y') }} Yannick Voyer<br/>
            {{ backlog_version() }}
        </p>
    </footer>
    {% javascripts '@BacklogBundle/Resources/public/js/jquery-3.2.1.slim.min.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    {% javascripts '@BacklogBundle/Resources/public/js/bootstrap.min.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    {% javascripts '@BacklogBundle/Resources/public/js/layout.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    </body>
</html>
