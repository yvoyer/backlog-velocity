<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Star\Component\Sprint\Model\TeamMemberModel"
            repository-class="Star\Plugin\Doctrine\Repository\PrivateRepository"
            table="backlog_team_members">
        <unique-constraints>
            <unique-constraint columns="person_id,team_id" name="unique_team_member_index" />
        </unique-constraints>

        <id name="id" type="integer" >
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="team" target-entity="Star\Component\Sprint\Model\TeamModel" inversed-by="teamMembers">
            <join-column name="team_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="person" target-entity="Star\Component\Sprint\Model\PersonModel">
            <join-column name="person_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
