<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Star\Component\Sprint\Model\SprintModel"
            table="backlog_sprints">
        <id name="id" type="integer" >
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" />

        <field name="estimatedVelocity" column="estimated_velocity" type="integer" nullable="true" />
        <field name="actualVelocity" column="actual_velocity" type="integer" nullable="true" />
        <field name="status" column="status" type="integer" nullable="false" />
        <one-to-many field="sprintMembers" target-entity="Star\Component\Sprint\Model\SprintMemberModel" mapped-by="sprint">
        </one-to-many>
        <many-to-one field="team" target-entity="Star\Component\Sprint\Model\TeamModel" inversed-by="sprints">
            <join-column name="team_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>