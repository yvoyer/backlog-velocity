<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Star\Component\Sprint\Domain\Model\ProjectAggregate"
            repository-class="Star\Plugin\Doctrine\Repository\DoctrineProjectRepository"
            table="backlog_projects">

        <id name="id" type="string" >
            <generator strategy="NONE" />
        </id>
        <field name="name" column="name" type="string" length="255"/>

        <one-to-many field="teams" target-entity="Star\Component\Sprint\Domain\Model\TeamModel" mapped-by="project">
        </one-to-many>
    </entity>
</doctrine-mapping>
