{% if sprint.hasCommitments %}
<form id="sprint-{{ sprint.id }}-start" method="POST" action="{{ url('sprint_start', { 'sprintId': sprint.id }) }}">
    <input type="hidden" name="_method" value="PUT" />
    <label for="velocity" class="sr-only">Velocity</label>
    <input type="number" name="velocity" value="{{ estimatedVelocity() }}" />
    <button class="btn btn-link">{{ 'label.form.create_sprint.start'|trans }}</button>
</form>
{% endif %}
