<p class="card-text">
</p>
<h4 class="card-title">
    {{ 'Most active sprint'|trans }}
</h4>
{#<a href="{{ url('project_show', {'id': project.id }) }}" class="btn btn-primary">More</a>#}


{% if sprint %}

    {% if sprint.started %}
        <div class="active sprint">
            <span class="col-xs-4"><a href="{{ url('sprint_show', {'sprintId': sprint.id }) }}" >{{ sprint.name }}</a></span>
            {% include 'Sprint/_sprintStatus.html.twig' with { 'sprint': sprint } %}
            <span class="col-xs-4 pull-right"><a href="#TODO">{{ 'End'|trans }}</a></span>
        </div>
    {% else %}
        <div class="pending sprint">
            <span class="col-xs-4"><a href="{{ url('sprint_show', {'sprintId': sprint.id }) }}" >{{ sprint.name }}</a></span>
            {% include 'Sprint/_sprintStatus.html.twig' with { 'sprint': sprint } %}
            <span class="col-xs-4 pull-right">
                <form id="sprint-{{ sprint.id }}-start" method="POST" action="{{ url('sprint_start', { 'sprintId': sprint.id }) }}">
                    <input type="hidden" name="_method" value="PUT" />
                    <input type="text" name="velocity" value="" />
                    <button class="btn btn-link">{{ 'Start'|trans }}</button>
                </form>
            </span>
        </div>
    {% endif %}

{% else %}
    <div class="no sprint">
        <span class="col-xs-4">{{ 'No active sprint yet...'|trans }}</span>
        <span class="col-xs-4 pull-right">
            <form id="project-{{ projectId }}-create_sprint" method="POST" action="{{ url('sprint_create', {'projectId': projectId }) }}">
                <button class="btn btn-link">{{ 'link.sprint.create_sprint'|trans }}</button>
            </form>
        </span>
    </div>
{% endif %}
