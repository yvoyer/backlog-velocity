{
    "name": "star/backlog-velocity",
    "description": "Calculator for sprint velocity",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Yannick Voyer",
            "email": "star.yvoyer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\Sprint\\": [
                "src/Domain",
                "src/Infrastructure/Persistence"
            ],
            "Star\\BacklogVelocity\\": "src",
            "Star\\Plugin\\": "plugin/Star/Plugin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\Sprint\\": ["tests"],
            "Star\\BacklogVelocity\\": "tests"
        }
    },
    "require": {
        "beberlei/assert": "~2.0",
        "doctrine/orm": "2.*",
        "php": ">=5.5",
        "prooph/event-sourcing": "~4.0",
        "star/identity": "~1.2",
        "star/state-machine": "~1.0.0-beta",
        "star/collection": "~1.0",
        "symfony/console": "2.*"
    },
    "require-dev": {
        "behat/behat": "2.4.*@stable",
        "phpunit/phpunit": "~4.0"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
